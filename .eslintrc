{
    "rules": {
        "indent": [
            "error",2
        ],
        "semi": [
            2,
            "always"
        ],
        "react/prop-types": 0,
        "react-hooks/rules-of-hooks": "error", // Checks rules of Hooks
    	"react-hooks/exhaustive-deps": "warn" // Checks effect dependencies
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "plugins": [
        "react",
        "react-hooks"
    ],
    "parser": "babel-eslint"
}